{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run build runner",
        "type": "shell",
        "command": "dart run build_runner build --delete-conflicting-outputs",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Deploy Firestore rules",
        "type": "shell",
        "command": "(cd firebase && firebase deploy --only firestore:rules)",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  